var pokemon_img_1 = document.getElementById('pokemon_1')
var pokemon_img_2 = document.getElementById('pokemon_2')
var pokemon2_life = document.getElementById('hp_poke2').innerHTML
var pokemon1_life = document.getElementById('hp_poke1').innerHTML
var button_attack = document.getElementById('attack')
var button_defense = document.getElementById('defense')
var button_items = document.getElementById('items')
var button_skip = document.getElementById('skip')
var bar_life1 = document.getElementById('bar_life1')
var bar_life2 = document.getElementById('bar_life2')


pokemon_img_1.classList.add('pokemon-attack')
pokemon_img_2.classList.add('pokemon-hit')
document.getElementById('hp_poke2').classList.add("pokemon_life_down")
button_attack.disabled = true;
button_defense.disabled = true;
button_items.disabled = true;
button_skip.disabled = true;


// CAUSAR DANO E LEVAR DANO
setTimeout(function() {
  pokemon_img_1.classList.remove('pokemon-attack');
  pokemon_img_2.classList.remove('pokemon-hit');
  document.getElementById('hp_poke2').classList.remove("pokemon_life_down")
  pokemon2_life -= 15;
  document.getElementById('hp_poke2').innerHTML = pokemon2_life;
  setTimeout(function() {
    pokemon_img_2.classList.add('pokemon-attack');
    pokemon_img_1.classList.add('pokemon-hit');
    document.getElementById('hp_poke1').classList.add("pokemon_life_down")
    setTimeout(function() {
      pokemon1_life -= 10;
      document.getElementById('hp_poke1').innerHTML = pokemon1_life;
      pokemon_img_1.classList.remove('pokemon-hit');
      document.getElementById('hp_poke1').classList.remove("pokemon_life_down")
      pokemon_img_2.classList.remove('pokemon-attack');

      button_attack.disabled = false;
      button_defense.disabled = false;
      button_items.disabled = false;
      button_skip.disabled = false;

      //MUDAR COR DA BARRA
      bar_life1.classList.remove("bg-success")
      bar_life2.classList.remove("bg-success")

      if (pokemon1_life < 50 && pokemon1_life > 30) {
        bar_life1.classList.add("bg-warning")
      } else if (pokemon1_life < 30) {
        bar_life1.classList.remove("bg-warning")
        bar_life1.classList.add("bg-danger")
      } else {
        bar_life1.classList.add("bg-success")
      }

      if (pokemon2_life < 50 && pokemon2_life > 30) {
        bar_life2.classList.add("bg-warning")
      } else if (pokemon2_life < 30) {
        bar_life2.classList.remove("bg-warning")
        bar_life2.classList.add("bg-danger")
      } else {
        bar_life2.classList.add("bg-success")
      }
    }, 1000)
  })
}, 1000)