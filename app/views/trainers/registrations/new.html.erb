<div class="login-page-container">
  <div class="card box">
    <article class="card-body">
      <h2>Se cadastra-se</h2>
      <hr>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "trainers/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :senha %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracter minimos)</em> 
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :confirme_sua_senha %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>
        <hr>
        <div class="actions">
          <%= f.submit "Cadastra-se", class: 'btn btn-secondary' %>
          <%= link_to "Logar", new_session_path(resource_name), class: "btn btn-primary me-3" %>
        </div>
      <% end %>
    </div>
   </article>
  </div>
</div>

